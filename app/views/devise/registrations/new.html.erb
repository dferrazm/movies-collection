<h2><%= t('devise.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'span4 margin-less' }) do |f| %>
  <%= render 'shared/form_errors', resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: t('attributes.email'), class: 'full-width' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: t('attributes.password'), class: 'full-width' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('attributes.password_confirmation'), class: 'full-width' %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.sign_up'), class: 'btn btn-success btn-big full-width' %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
