<%= form_for(movie, html: { class: 'full-width' }) do |f| %>
  <%= render 'shared/form_errors', resource: movie %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <div class="field">
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :director %>
    <%= f.text_field :director %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-success btn-big">
      <%= t('.done') %>
    </button>
  </div>
<% end %>
